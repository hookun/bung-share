<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/usericon"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        />
    <TextView
        android:id="@+id/market_info"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        app:layout_constraintLeft_toRightOf="@+id/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="서울특별시 ~~구 ~~동 ~~역 앞 5번출구 옆\n08~20시\n휴무일 토,일"/>
    <android.widget.Button
        android:tag="off"
        android:id="@+id/likebutton"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        android:paddingLeft="30dp"
        android:drawablePadding="-50dp"
        android:gravity="center"
        android:drawableLeft="@drawable/loveit_off"
        android:text="찜 : 0개"

        />
    <android.widget.Button
        android:id="@+id/review_button"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/likebutton"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        android:paddingLeft="30dp"
        android:drawablePadding="-35dp"
        android:gravity="center"
        android:drawableLeft="@drawable/review"
        android:text="리뷰 : 0개"
        />

    <ScrollView
        android:id="@+id/menu_info"
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        android:textAlignment="center"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likebutton"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity">
        <LinearLayout
            android:id="@+id/info_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

        </LinearLayout>
    </ScrollView>
    <fragment
        android:id="@+id/market_map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/menu_info"
        app:layout_constraintVertical_bias="1.0"
        app:mapType="terrain"
        tools:layout_editor_absoluteX="56dp"
        />

    <android.widget.Button
        android:id="@+id/make_review"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/market_map"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        android:text="리뷰작성"
        />
    <android.widget.Button
        android:id="@+id/how_to_go"
        android:layout_width="175dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@id/make_review"
        app:layout_constraintTop_toBottomOf="@id/market_map"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="@color/grey"
        android:text="길찾기"

        />
</androidx.constraintlayout.widget.ConstraintLayout>