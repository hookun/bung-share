<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".info_review_fragment"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/close_btn"
        android:src="@drawable/close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ff0000"
        android:text="X"
        android:textColor="@color/black"
        android:layout_gravity="right"/>
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:columnCount="6"
       android:rowCount="4">
        <ImageButton
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:src="@drawable/taiyaki"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn1"
            />
       <ImageButton
           android:scaleType="fitCenter"
           android:padding="10dp"
           android:src="@drawable/k_pancake"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/btn2"
           android:text="1"/>
       <ImageButton
           android:scaleType="fitCenter"
           android:padding="10dp"
           android:src="@drawable/ricecake"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/btn3"
           android:text="1"/>
       <ImageButton
           android:scaleType="fitCenter"
           android:padding="10dp"
           android:src="@drawable/takoyaki"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/btn4"
           android:text="1"/>
       <ImageButton
           android:scaleType="fitCenter"
           android:padding="10dp"
           android:src="@drawable/toast"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/btn5"
           android:text="1"/>
       <ImageButton
           android:scaleType="fitCenter"
           android:padding="10dp"
           android:src="@drawable/tanghuru"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/btn6"
           android:text="1"/>



   </GridLayout>


</LinearLayout>
