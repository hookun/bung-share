<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addmap">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.bung_share.CustomMapView
            android:id="@+id/market_map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cameraTargetLat="37.584"
            app:cameraTargetLng="126.925"
            app:cameraZoom="18"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_bias="1.0"
            app:mapType="terrain"
            tools:layout_editor_absoluteX="56dp" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게위치"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/market_map"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/location"
            android:background="@drawable/round_coners"
            android:backgroundTint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/location_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="위치를 입력해주세요"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/location"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <android.widget.Button
            android:id="@+id/categorybtn"
            android:text="+"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/category_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:tag=""
            android:id="@+id/category1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/category_txt"
            app:layout_constraintLeft_toRightOf="@id/categorybtn"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <ImageButton
            android:tag=""
            android:id="@+id/category2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/category_txt"
            app:layout_constraintLeft_toRightOf="@id/category1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <ImageButton
            android:tag=""
            android:id="@+id/category3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/category_txt"
            app:layout_constraintLeft_toRightOf="@id/category2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/menu_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 정보"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/categorybtn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <EditText
            android:id="@+id/menu_info"
            android:background="@drawable/round_coners"
            android:backgroundTint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/menu_info_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="메뉴 정보를 입력해주세요"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/pay_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제방식"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/menu_info"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <CheckBox
            android:id="@+id/paycheck_cash"
            android:text="현금"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:background="@drawable/round_coners"
            app:layout_constraintTop_toBottomOf="@+id/pay_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <CheckBox
            android:id="@+id/paycheck_bank"
            android:text="계좌이체"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:background="@drawable/round_coners"
            app:layout_constraintTop_toBottomOf="@+id/pay_txt"
            app:layout_constraintLeft_toRightOf="@id/paycheck_cash"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <CheckBox
            android:id="@+id/paycheck_card"
            android:text="카드"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:background="@drawable/round_coners"
            app:layout_constraintTop_toBottomOf="@+id/pay_txt"
            app:layout_constraintLeft_toRightOf="@id/paycheck_bank"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/dayoff_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴무일"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/paycheck_cash"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <ToggleButton
            android:id="@+id/monday"
            android:textOn="월"
            android:textOff="월"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/tuesday"
            android:textOn="화"
            android:textOff="화"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/monday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/wendsday"
            android:textOn="수"
            android:textOff="수"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/tuesday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/thirsday"
            android:textOn="목"
            android:textOff="목"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/wendsday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/friday"
            android:textOn="금"
            android:textOff="금"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/thirsday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/saturday"
            android:textOn="토"
            android:textOff="토"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/friday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <ToggleButton
            android:id="@+id/sunday"
            android:textOn="일"
            android:textOff="일"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_backgroud"
            app:layout_constraintTop_toBottomOf="@+id/dayoff_txt"
            app:layout_constraintLeft_toRightOf="@id/saturday"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/monday"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TimePicker
            android:timePickerMode="spinner"
            android:id="@+id/timestart"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/time_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/time_txt"
            app:layout_constraintLeft_toRightOf="@id/timestart"
            app:layout_constraintRight_toLeftOf="@id/timeend"
            android:layout_marginTop="50dp"
            />
        <TimePicker
            android:timePickerMode="spinner"
            android:id="@+id/timeend"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/time_txt"
            app:layout_constraintLeft_toRightOf="@id/timestart"
            android:layout_marginTop="20dp"
           />

        <Button
            android:id="@+id/mapUpload"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="제보 올리기"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timestart" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</FrameLayout>
